<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.administrator.weiraoeducationinstitution.activity.teacher.Teacher_Select_HadActivity">

    <include layout="@layout/include_top_actionbar"></include>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/griditems_bg"></View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/teacher_had_search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_search" />

        <com.example.administrator.weiraoeducationinstitution.view.ClearEditText
            android:id="@+id/teacher_had_search_input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:hint="请输入电话号码"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/teacher_had_newAdd_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/griditems_bg"
        android:padding="7dp"
        android:text="最近新增"
        android:textSize="16sp" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/teacher_had_recyclerview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></com.jcodecraeer.xrecyclerview.XRecyclerView>


    <RelativeLayout
        android:id="@+id/teacher_had_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="gone">

        <Button
            android:id="@+id/teacher_had_add"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_login_btn_click_selector"
            android:text="新增"
            android:textColor="@drawable/login_text_click_bg"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
