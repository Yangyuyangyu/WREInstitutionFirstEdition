<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_tips_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tips_dialog_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:padding="10dp"
            android:text="温馨提示"
            android:textColor="@color/weirao_title_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:background="@color/weirao_title_color"></View>

        <TextView
            android:id="@+id/tips_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="是否真的要退出?"
            android:textColor="@color/weirao_text_normal_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#dadada" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips_dialog_block"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tips_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:linksClickable="true"
            android:text="取消"
            android:textColor="#349BFF"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <Button
            android:id="@+id/tips_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:linksClickable="true"
            android:text="确认"
            android:textColor="#349BFF"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>