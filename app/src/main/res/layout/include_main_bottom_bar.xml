<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/windowBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/main_bottom_Re1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_bottom_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_bottom_home_selector" />

        <TextView
            android:id="@+id/main_bottom_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_bottom_img1"
            android:layout_centerHorizontal="true"
            android:text="首页"
            android:textColor="@drawable/main_bottom_txt_selector"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_bottom_Re2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_bottom_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_bottom_manage_selector" />

        <TextView
            android:id="@+id/main_bottom_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_bottom_img2"
            android:layout_centerHorizontal="true"
            android:text="管理"
            android:textColor="@drawable/main_bottom_txt_selector"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_bottom_Re3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_bottom_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_bottom_ranking_selector" />

        <TextView
            android:id="@+id/main_bottom_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_bottom_img3"
            android:layout_centerHorizontal="true"
            android:text="排名"
            android:textColor="@drawable/main_bottom_txt_selector"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
