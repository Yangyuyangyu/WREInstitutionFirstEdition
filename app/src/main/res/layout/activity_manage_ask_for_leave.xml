<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/griditems_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.administrator.weiraoeducationinstitution.activity.manage.Manage_DynamicActivity">

    <include layout="@layout/include_top_toolbar"></include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"></View>

                <RadioButton
                    android:id="@+id/manage_askforleave_teacher"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="老师"
                    android:textColor="@color/weirao_text_normal_color" />

                <RadioButton
                    android:id="@+id/manage_askforleave_student"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="学生"
                    android:textColor="@color/weirao_text_normal_color" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"></View>
            </RadioGroup>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/manage_askforleave_frameLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/windowBackground"></FrameLayout>
    </LinearLayout>

</LinearLayout>
